CC=g++
CFLAGS=-w -std=c++0x -O3
DEPS=FS.h fs_stat.h fs_structs.h
SOURCES=main.cpp Disk.cpp ext.cpp FS.cpp ntfs.cpp
OBJECTS=$(SOURCES:.cpp=.o)
EXECUTABLE=fs_stat


all: $(SOURCES) $(EXECUTABLE)
	
$(EXECUTABLE): $(OBJECTS)
	$(CC) $(CFLAGS) $(OBJECTS) -o $@

%.o:$(DEPS)
	$(CC) $(CFLAGS) -c $*.cpp -o $@

clean:
	rm -rf *.o fs_stat